<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/textViewUsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YouTube URL:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/editTextUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the YouTube URL"
        android:inputType="text"
        android:layout_below="@id/textViewUsernameLabel"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_below="@id/editTextUrl"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonAddToPlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO PLAYLIST"
        android:layout_below="@id/buttonPlay"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonMyPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY PLAYLIST"
        android:layout_below="@id/buttonAddToPlayList"
        android:layout_marginTop="8dp"/>

</RelativeLayout>